
<ToDoListItem>:
    size_hint_y: None
    height: 48
    orientation: 'horizontal'
    CheckBox:
        id: checkbox
        size_hint_x: 0.1
        on_active: root.on_checkbox_active(*args)

#    TextInput:
#        id: text_input
#        text: root.text
#        multiline: False
#        size_hint_x: 0.75
#        opacity: 0
#        disabled: True
#        on_text_validate: root.apply_edit()  # Triggered when the user presses Enter

    Label:
        id: task_label  # Ensure this id matches the one used in your Python code
        text: root.text


    Button:
        id: edit_button
        text: 'Edit'
        size_hint_x: 0.125
        opacity: 0
        disabled: True
        on_release: app.root.edit_item(root)

    Button:
        id: delete_button
        text: 'Delete'
        size_hint_x: 0.125
        opacity: 0
        disabled: True
        on_release: app.root.delete_item(root)

<MainToDoList>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: 50
        spacing: 10
        padding: 10
        

    RecycleView:
        id: rv
        viewclass: 'ToDoListItem'
        RecycleBoxLayout:
            default_size: None, dp(48)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'

    BoxLayout:
        size_hint_y: 0.1
        orientation: 'horizontal'
        
        Widget:
            # This widget acts as a spacer, pushing the button to the right
            size_hint_x: 1

        Button:
            text: '+'
            size_hint: None, None
            size: dp(60), dp(60)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            on_release: root.add_item()
            opacity: 1
            disabled: False

    TextInput:
        id: global_edit_text
        size_hint_y: 0.1
        multiline: False
        opacity: 0
        disabled: True
        on_text_validate: root.apply_global_edit()
