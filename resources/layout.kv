
<ToDoListItem>:
    size_hint_y: None
    height: 40
    orientation: 'horizontal'
    padding: [20, 0, 0, 5]

    canvas.before:
        Color:
            rgba: 0.596, 0.984, 0.596, 1
        Line:
            rectangle: self.x+1, self.y+1, self.width-2, self.height-2
            width: 1.25
        Rectangle:
            pos: self.pos
            size: self.size

    Widget:
        size_hint_y: None
        width: 3

    MDCheckbox:
        id: checkbox
        active: root.state
        size_hint: None, None
        size: 24, 24
        active_color: 0.058, 0.615, 0.345, 1
        inactive_color: 0.501, 0.501, 0.501, 1
        pos_hint: {'center_y': 0.5, 'x': 0.5}
        on_active: root.on_checkbox_change(*args)

    Label:
        id: task_label
        text: root.text
        color: 0, 0, 0, 1
        padding: [5, 0, 0, 12]
        size_hint_y: None
        height: 24  # Adjust as needed for the label
        width: 200
        text_size: self.width - 10,None  # Adjust text width with padding

    Widget:
        size_hint_y: None
        width: 10


    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 30  # Adjust as needed for buttons
        padding: [0, 0, 0, 2]  # Adjust padding as needed
        spacing: 3  # Space between buttons
        MDRaisedButton:
            id: edit_button
            text: 'Edit'
            text_color: 0, 0, 0, 1
            md_bg_color: 0.596, 0.984, 0.596, 1
            height: root.height*0.5
            width: root.width*0.12
            size_hint: None, None
            opacity: 0
            disabled: True
            on_release: app.root.get_screen('main').edit_item(root)

        MDRaisedButton:
            id: delete_button
            text: 'Delete'
            text_color: 0, 0, 0, 1
            md_bg_color: 0.596, 0.984, 0.596, 1
            height: root.height*0.5
            width: root.width*0.18
            size_hint: None, None
            opacity: 0
            disabled: True
            on_release: app.root.get_screen('main').delete_item(root.id)






<MainToDoList>:
    name: 'main'
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        padding: [20, 20, 20, 20]
        height: 50
        spacing: 10
        padding: 10


    RecycleView:
        id: rv
        viewclass: 'ToDoListItem'
        RecycleBoxLayout:
            default_size: None, dp(48)
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            orientation: 'vertical'
            spacing: dp(3)

    BoxLayout:
        size_hint_y: 0.3
        orientation: 'horizontal'
        TextInput:
            id: global_edit_text
            multiline: False
            opacity: 0
            disabled: True
            on_text_validate: root.apply_global_edit()

    BoxLayout:
        size_hint_y: 0.1
        orientation: 'horizontal'
        MDRaisedButton:
            text: 'Settings'
            text_color: 0, 0, 0, 1
            size_hint: None, None
            height: root.height*0.1
            width: root.width*0.3
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.596, 0.984, 0.596, 1
            opacity: 1
            disabled: False
            on_release: app.root.current = 'login'

        Widget:
            size_hint_y: None
            width: 20

        MDFloatingActionButton:
            text: '‚ü≥'
            text_color: 0, 0, 0, 1
            size_hint: None, None
            height: root.height*0.075
            width: root.width*0.125
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.596, 0.984, 0.596, 1
            on_release: root.sync_items()
            opacity: 1
            disabled: False

        Widget:
            size_hint_y: None
            width: 20

        MDRaisedButton:
            text: '+'
            text_color: 0, 0, 0, 1
            size_hint: None, None
            height: root.height*0.1
            width: root.width*0.3
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            md_bg_color: 0.596, 0.984, 0.596, 1
            on_release: root.add_item()
            opacity: 1
            disabled: False


<LoginScreen>:
    name: 'login'
    BoxLayout:
        orientation: 'vertical'
        spacing: 20  # Space between the label and the nested BoxLayout

        Label:
            text: 'Login'
            size_hint_y: None
            height: 50
            font_size: '20sp'

        Widget:
            # This widget acts as a flexible spacer
            size_hint_y: None
            height: 20  # Adjust this value to manage the space above the login form

        # Inner BoxLayout for the login widgets
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None  # Allow the BoxLayout to grow based on its content
            height: self.minimum_height  # Calculate height based on the content
            pos_hint: {'center_y': .5}  # Center this layout in the vertical space
            padding: [20, 20, 20, 20]  # Padding around the edges of the BoxLayout
            spacing: 10

            TextInput:
                id: username_input
                hint_text: 'Username'
                size_hint_y: None
                height: 40
                padding_y: (10, 10)

            TextInput:
                id: password_input
                hint_text: 'Password'
                password: True
                size_hint_y: None
                height: 40
                padding_y: (10, 10)

            TextInput:
                id: broker_adress
                hint_text: 'Broker Adresse'
                size_hint_y: None
                height: 40
                padding_y: (10, 10)

            TextInput:
                id: port_input
                hint_text: 'Port'
                size_hint_y: None
                height: 40
                padding_y: (10, 10)

            TextInput:
                id: topic_input
                hint_text: 'Topic'
                size_hint_y: None
                height: 40
                padding_y: (10, 10)

        Widget:
            # Another flexible spacer, can adjust height as needed
            size_hint_y: None
            height: 20


        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None  # Allow the BoxLayout to grow based on its content
            height: self.minimum_height  # Calculate height based on the content
            pos_hint: {'center_y': .5}  # Center this layout in the vertical space
            padding: [20, 20, 20, 20]
            spacing: 10

            MDRaisedButton:
                text: 'Connect'
                text_color: 0, 0, 0, 1
                size_hint: None, None
                height: root.height*0.1
                width: root.width*0.87
                md_bg_color: 0.596, 0.984, 0.596, 1
                on_release: root.update_config_yaml(username_input, password_input, broker_adress, port_input, topic_input)


        Widget:
            # Another flexible spacer, can adjust height as needed
            size_hint_y: None
            height: 20  # Adjust this value to manage the space below the login form

        BoxLayout:
            size_hint_y: 0.0
            orientation: 'horizontal'
            MDRaisedButton:
                text: 'Back'
                text_color: 0, 0, 0, 1
                size_hint: None, None
                height: root.height*0.1
                width: root.width*0.3
                md_bg_color: 0.596, 0.984, 0.596, 1
                on_release: app.root.current = 'main'

